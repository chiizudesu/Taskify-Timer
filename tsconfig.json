{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./renderer/src/*"
      ]
    }
  },
  "include": [
    "electron/**/*.ts",
    "renderer/src/**/*.ts",
    "renderer/src/**/*.tsx"
  ]
}

